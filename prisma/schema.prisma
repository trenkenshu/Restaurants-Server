model Client {
    id          Int        @id @default(autoincrement())
    login       String     @unique
    password    String
    email       String     @unique
    phone       String
    reviews     Review[]
    bookings    Booking[]
}

model Cafe {
    id            Int       @id @default(autoincrement())
    name          String    @unique
    city          String
    address       String
    coordinates   Float[]
    phone         String
    workTimeStart Int       @default(10)
    workTimeEnd   Int       @default(22)
    rating        Float     @default(0)
    averageCheck  Float
    cuisineType   String[]
    reviews       Review[]
    images        String[]
    menuImg       String
    tags          String[]
    bookings      Booking[]
}

model Review {
    id            Int       @id @default(autoincrement())
    author        Client    @relation(fields: [authorId], references: [id])
    cafe          Cafe     @relation(fields: [cafeId], references: [id])
    cafeId        Int
    authorId      Int
    text          String
    rating        Int
}

model Booking {
    id            Int       @id @default(autoincrement())
    guest         Client    @relation(fields: [guestId], references: [id])
    cafe          Cafe      @relation(fields: [cafeId], references: [id])
    cafeId        Int
    guestId       Int
    tableId       Int       @default(0)
    createdAt     DateTime  @default(now())
    date          DateTime
    duration      Int

}